<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="60dp" >
    <LinearLayout
            android:id="@+id/actionClearScore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_button"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:backgroundTint="@color/colorActionButton"
            android:elevation="0dp"
            android:translationZ="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <View
                android:id="@+id/actionClearScoreIcon"
                android:layout_width="@dimen/actionIcon"
                android:layout_height="@dimen/actionIcon"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_medium"
                android:background="@drawable/ic_reset_score"/>

        <TextView
                android:id="@+id/actionClearScoreText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:paddingEnd="@dimen/padding_extra_large"
                android:paddingStart="@dimen/padding_medium"
                android:gravity="center"
                android:text="@string/action_clear"/>
    </LinearLayout>

    <FrameLayout
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_circle"
            android:backgroundTint="@color/shadow"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <FrameLayout
                android:visibility="visible"
                android:id="@+id/actionStrike"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_circle"
                android:backgroundTint="@color/colorActionButton"
                android:elevation="1dp"
                android:translationZ="8dp">
            <View
                    android:background="@drawable/img_ball"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
            android:visibility="gone"
            android:id="@+id/actionSaveScore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_button"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:backgroundTint="@color/colorActionButton"
            android:elevation="0dp"
            android:translationZ="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <View
                android:id="@+id/actionSaveScoreIcon"
                android:layout_width="@dimen/actionIcon_small"
                android:layout_height="@dimen/actionIcon_small"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_medium"
                android:background="@drawable/ic_save_score"/>

        <TextView
                android:id="@+id/actionSaveScoreText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:paddingEnd="@dimen/padding_extra_large"
                android:paddingStart="@dimen/padding_medium"
                android:gravity="center"
                android:text="@string/action_save"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>