<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/shape_dialog"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="2dp"
        android:translationZ="18dp"
        android:padding="@dimen/margin_large"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

    <TextView
            android:id="@+id/loadDialogLabel"
            android:text="@string/load_result"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/loadDialogResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_dialog"
            android:backgroundTint="@color/white"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:minHeight="150dp"
            app:layout_constraintTop_toBottomOf="@+id/loadDialogLabel"
            app:layout_constraintBottom_toTopOf="@id/dialogLoadClear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/dialog_load_result_item"/>

    <LinearLayout
            android:id="@+id/dialogLoadClear"
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_button"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_extra_large"
            android:paddingStart="0dp"
            android:backgroundTint="@color/colorPrimaryLight"
            android:elevation="1dp"
            android:translationZ="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <View
                android:id="@+id/dialogSaveSubmitIcon"
                android:layout_width="@dimen/actionIcon_small"
                android:layout_height="@dimen/actionIcon_small"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_medium"
                android:background="@drawable/ic_delete"/>

        <TextView
                android:id="@+id/dialogSaveSubmitText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="0dp"
                android:gravity="center"
                android:text="@string/clear"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>