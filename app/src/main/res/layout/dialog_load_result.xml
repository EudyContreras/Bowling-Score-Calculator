<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/shape_dialog"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="2dp"
        android:translationZ="16dp"
        android:padding="@dimen/margin_large"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
            android:id="@+id/loadDialogLabel"
            android:text="@string/load_result"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <View
            android:id="@+id/loadDialogIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/margin"
            android:background="@drawable/img_logo"
            app:layout_constraintTop_toTopOf="@id/loadDialogLabel"
            app:layout_constraintBottom_toBottomOf="@id/loadDialogLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/loadDialogResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/shape_dialog"
            android:backgroundTint="@color/white"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@+id/loadDialogLabel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/dialog_load_result_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>