<?xml version="1.0" encoding="utf-8"?>
<com.eudycontreras.bowlingcalculator.libraries.morpher.effectViews.morphLayouts.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:backgroundTint="@color/colorPrimary"
        android:tag="settings"
        android:layout_gravity="center"
        android:elevation="2dp"
        android:translationZ="10dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:minWidth="260dp"
        android:paddingTop="2dp"
        android:paddingStart="@dimen/padding_large"
        android:paddingEnd="@dimen/padding_large"
        android:paddingBottom="@dimen/padding_large"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/createBowlerDialog"
        tools:context=".activities.MainActivity"
        app:cl_radius="16dp">

    <TextView
            android:id="@+id/palettesLabel"
            android:text="@string/settingsThemes"
            android:textAlignment="gravity"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_extra_large"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
            android:id="@+id/settingsThemes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_extra_large"
            app:layout_constraintTop_toBottomOf="@+id/palettesLabel">

        <com.eudycontreras.bowlingcalculator.customviews.SquareFrameLayout
                android:layout_width="0dp"
                android:layout_margin="@dimen/margin_large"
                android:background="@drawable/shape_circle"
                android:backgroundTint="@color/colorPrimaryDarker"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <com.eudycontreras.bowlingcalculator.customviews.SquareView
                    android:id="@+id/theme0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:backgroundTint="@color/theme1"
                    android:background="@drawable/shape_circle"
                    android:layout_weight="1" />
        </com.eudycontreras.bowlingcalculator.customviews.SquareFrameLayout>

        <com.eudycontreras.bowlingcalculator.customviews.SquareFrameLayout
                android:layout_width="0dp"
                android:layout_margin="@dimen/margin_large"
                android:background="@drawable/shape_circle"
                android:backgroundTint="@color/colorPrimaryDarker"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <com.eudycontreras.bowlingcalculator.customviews.SquareView
                    android:id="@+id/theme1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:backgroundTint="@color/theme0"
                    android:background="@drawable/shape_circle"
                    android:layout_weight="1" />
        </com.eudycontreras.bowlingcalculator.customviews.SquareFrameLayout>

        <com.eudycontreras.bowlingcalculator.customviews.SquareFrameLayout
                android:layout_width="0dp"
                android:layout_margin="@dimen/margin_large"
                android:background="@drawable/shape_circle"
                android:backgroundTint="@color/colorPrimaryDarker"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <com.eudycontreras.bowlingcalculator.customviews.SquareView
                    android:id="@+id/theme2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:backgroundTint="@color/theme2"
                    android:background="@drawable/shape_circle"
                    android:layout_weight="1" />
        </com.eudycontreras.bowlingcalculator.customviews.SquareFrameLayout>
        <com.eudycontreras.bowlingcalculator.customviews.SquareFrameLayout
                android:layout_width="0dp"
                android:layout_margin="@dimen/margin_large"
                android:background="@drawable/shape_circle"
                android:backgroundTint="@color/colorPrimaryDarker"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <com.eudycontreras.bowlingcalculator.customviews.SquareView
                    android:id="@+id/theme3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:backgroundTint="@color/theme3"
                    android:background="@drawable/shape_circle"
                    android:layout_weight="1" />
        </com.eudycontreras.bowlingcalculator.customviews.SquareFrameLayout>
        <com.eudycontreras.bowlingcalculator.customviews.SquareFrameLayout
                android:layout_width="0dp"
                android:layout_margin="@dimen/margin_large"
                android:background="@drawable/shape_circle"
                android:backgroundTint="@color/colorPrimaryDarker"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <com.eudycontreras.bowlingcalculator.customviews.SquareView
                    android:id="@+id/theme4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:backgroundTint="@color/theme4"
                    android:background="@drawable/shape_circle"
                    android:layout_weight="1" />
        </com.eudycontreras.bowlingcalculator.customviews.SquareFrameLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/dialogSettingsCancel"
            android:layout_width="115dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_button"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:backgroundTint="@color/colorPrimaryLight"
            android:elevation="1dp"
            android:translationZ="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settingsThemes">
    
        <View
                android:id="@+id/dialogSaveCancelIcon"
                android:layout_width="@dimen/actionIcon"
                android:layout_height="@dimen/actionIcon"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_medium"
                android:background="@drawable/ic_cancel"/>

        <TextView
                android:id="@+id/dialogSettingsCancelText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:paddingEnd="@dimen/padding_extra_large"
                android:paddingStart="@dimen/padding_medium"
                android:gravity="center"
                android:text="@string/cancel"/>
    </LinearLayout>
</com.eudycontreras.bowlingcalculator.libraries.morpher.effectViews.morphLayouts.ConstraintLayout>