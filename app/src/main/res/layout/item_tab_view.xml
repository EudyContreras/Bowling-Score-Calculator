<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/shape_tab"
        android:backgroundTint="@color/colorPrimaryLight"
        android:translationZ="8dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:paddingEnd="@dimen/padding_medium"
        android:paddingStart="@dimen/padding_large"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
    <TextView
            android:id="@+id/tabItemLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            tools:text="Eudy Contreras"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <FrameLayout
            android:id="@+id/tabItemAction"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin"
            android:layout_gravity="end|center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/shape_circle"
            android:backgroundTint="@color/colorPrimaryVeryLight"
            android:elevation="1dp"
            android:translationZ="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tabItemLabel">
        <View
                android:id="@+id/tabItemActionIcon"
                android:layout_gravity="center"
                android:background="@drawable/ic_close"
                android:backgroundTint="@color/white"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>