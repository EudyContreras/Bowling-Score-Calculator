<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/shape_background"
        android:backgroundTint="@color/background"
        android:elevation="1dp"
        android:translationZ="0dp"
        android:focusable="false"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginStart="@dimen/margin"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <TextView
            android:id="@+id/frameIndex"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:paddingEnd="@dimen/padding"
            android:paddingStart="0dp"
            tools:text="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <include
            layout="@layout/item_frame_view_mark"
            android:id="@+id/firstRoundMark"
            android:layout_width="@dimen/mark"
            android:layout_height="@dimen/mark"
            android:layout_marginStart="@dimen/margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/frameIndex"/>

    <include
            layout="@layout/item_frame_view_mark"
            android:id="@+id/secondRoundMark"
            android:layout_width="@dimen/mark"
            android:layout_height="@dimen/mark"
            android:layout_marginStart="@dimen/margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/firstRoundMark"/>

    <include
            layout="@layout/item_frame_view_mark"
            android:id="@+id/extraRoundMark"
            android:layout_width="@dimen/mark"
            android:layout_height="@dimen/mark"
            android:layout_marginStart="@dimen/margin"
            android:elevation="6dp"
            android:alpha="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/secondRoundMark"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/frameScore"
            android:layout_width="90dp"
            android:layout_height="@dimen/mark"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="gravity"
            android:background="@drawable/shape_button"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:backgroundTint="@color/gray"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:paddingEnd="@dimen/padding_extra_large"
            android:paddingStart="@dimen/padding_extra_large"
            android:gravity="center"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>